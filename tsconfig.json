{
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "./src/ts",
    "outDir": "./src/js",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "target": "es5"
    //"emitDecoratorMetadata": true,
    //"experimentalDecorators": true
    //"module": "commonjs"

  },
  "compileOnSave": true,         // webpack compiles ts-files
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
